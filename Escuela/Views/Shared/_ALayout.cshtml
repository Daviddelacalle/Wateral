<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>@ViewBag.Title - Wateral</title>
    @Styles.Render("~/Content/bootstrap.min.css")


    @Styles.Render("~/css/bootstrap.min.css")
    @Styles.Render("~/css/core.css")
    @Styles.Render("~/css/components.css")
    @Styles.Render("~/css/icons.css")
    @Styles.Render("~/css/pages.css")
    @Styles.Render("~/css/menu.css")
    @Styles.Render("~/css/responsive.css")
    @Scripts.Render("~/js/modernizr.min.js")

</head>
<body>
    <!-- Begin page -->
    <div id="wrapper">

        <!-- Top Bar Start -->
        <div class="topbar">
            <div class="topbar-left" style="height: 70px; padding-left: 10px;">
                <a class="logo" href="~/Home/Index">Wateral</a>
            </div>

            <!-- Button mobile view to collapse sidebar menu -->
            <div class="navbar navbar-default" role="navigation">
                <div class="container">

                    <!-- Page title -->
                    <ul class="nav navbar-nav navbar-left">
                        <li>
                            <button class="button-menu-mobile open-left">
                                <i class="zmdi zmdi-menu"></i>
                            </button>
                        </li>
                    </ul>
                </div><!-- end container -->
            </div><!-- end navbar -->
        </div>
        <!-- Top Bar End -->
        <!-- ========== Left Sidebar Start ========== -->
        <div class="left side-menu">
            <div class="sidebar-inner slimscrollleft">

                <!-- User -->
                <div class="user-box">
                    <div class="user-img">
                        <img src="~/images/admin.png" alt="user-img" title="Administrador" class="img-circle img-thumbnail img-responsive">
                    </div>
                    <h5><a href="~/Home/Index">Administrador</a> </h5>
                    <ul class="list-inline">
                        <li>
                            <a href="~/Account/LogOff" class="text-custom">
                                <i class="zmdi zmdi-power" style="color:red"></i>
                            </a>
                        </li>
                    </ul>
                </div>
                <!-- End User -->
                <!--- Sidemenu -->
                <div id="sidebar-menu">
                    <ul>
                        <li class="text-muted menu-title">Gestión</li>

                        <li>
                            <a id="index" href="~/Home" class="waves-effect"><i class="zmdi zmdi-view-dashboard"></i> <span> Inicio </span> </a>
                        </li>

                        <li>
                            <a id="usuarios" href="~/UserRegistrado/AIndex" class="waves-effect"><i class="zmdi zmdi-account"></i> <span> @Recursos.Recurso.String40 </span> </a>
                        </li>

                        <li>
                            <a id="grupos" href="~/Grupo/Index" class="waves-effect"><i class="zmdi zmdi-assignment-account"></i> <span> @Recursos.Recurso.String41 </span> </a>
                        </li>

                        <li>
                            <a id="productos" href="~/Producto/AIndex" class="waves-effect"><i class="zmdi zmdi-shopping-cart"></i> <span> @Recursos.Recurso.String39 </span> </a>
                        </li>

                        <li>
                            <a id="noticias" href="~/Noticia/AIndex" class="waves-effect"><i class="zmdi zmdi-file-text"></i> <span> @Recursos.Recurso.String42 </span></a>
                        </li>



                    </ul>
                    <div class="clearfix"></div>
                </div>
                <!-- Sidebar -->
                <div class="clearfix"></div>

            </div>

        </div>
        <!-- Left Sidebar End -->
        <div class="content-page">
            <div class="content">
                <div class="container">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>










    <!-- Footer -->
    <footer class="py-5 bg-dark fixed-bottom">
        <div class="container">
            <p class="m-0 text-center text-white">Wateral 2017 &copy; @Recursos.Recurso.String34.</p>
        </div>
        <!-- /.container -->
    </footer>

    <script>
            var resizefunc = [];
    </script>

    @Scripts.Render("~/js/jquery.min.js")
    @Scripts.Render("~/js/bootstrap.min.js")
    @Scripts.Render("~/js/detect.js")
    @Scripts.Render("~/js/fastclick.js")
    @Scripts.Render("~/js/jquery.slimscroll.js")
    @Scripts.Render("~/js/jquery.blockUI.js")
    @Scripts.Render("~/js/waves.js")
    @Scripts.Render("~/js/jquery.nicescroll.js")
    @Scripts.Render("~/js/jquery.scrollTo.min.js")


    @Scripts.Render("~/plugins/jquery-knob/jquery.knob.js")
    @Scripts.Render("~/plugins/morris/morris.min.js")
    @Scripts.Render("~/plugins/raphael/raphael-min.js")
    @Scripts.Render("~/pages/jquery.dashboard.js")
    @Scripts.Render("~/js/jquery.core.js")
    @Scripts.Render("~/js/jquery.app.js")

    @Scripts.Render("~/Scripts/bootstrap.bundle.min.js")
    @RenderSection("scripts", required: false)
</body>
</html>
