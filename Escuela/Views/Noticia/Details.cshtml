@model Escuela.Models.Noticia

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";

    Escuela.Models.Noticia item = ViewData["Noticia"] as Escuela.Models.Noticia;
}

<h2 class="my-4 text-center">@Html.DisplayFor(model => model.Titulo)</h2>

<div class="container col-sm-10">
    <div class="jumbotron">
        <div class="container-fluid" style="padding: 0 0 40px 0">
            <div class="row-fluid">
                <div class="row">
                    <div class="col-lg-6">
                        <figure class="figure">
                            @{
                                string enlace = "../Noticia/Details/" + item.id;

                                <a href=@enlace> <img src="~/Images/Noticias/@item.Imagen" class="card-img-top" alt="@item.Titulo"></a>
                            }
                        </figure>
                    </div>
                    <div class="col-lg-6" style="word-wrap: break-word; word-break: break-all">
                        @Html.Raw(item.Texto.Replace(Environment.NewLine, "<br/>"))
                    </div>
                </div>
                <hr />
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.Fecha)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Fecha)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Autor)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Autor)
                    </dd>

                </dl>
            </div>
        </div>
    </div>
</div>
<p>
    @Html.ActionLink("Volver a Noticias", "Index")
</p>
